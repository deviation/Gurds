<h1>contract Information</h1>

<%= link_to 'Back', contracts_path %>
<%= link_to 'Edit', edit_contract_path(@contract) %>
<p><%= link_to "Printable Contract (PDF)", contract_path(@contract, format: "pdf")  %></p>
<br>


<table>
<tr>
<th>Contract Details</th>
</tr>

 <tr>
   <th>Customer ID</th>
   <th>Customer Name</th>
   <th>Discount</th>
   <th>Start Date</th>
   <th>End Date</th>
   <th>Payment Terms</th>
   <th>Delivery Day Of Week</th>
   <th>Employee ID</th>
   <th>Note</th>
   <th>Commission</th>
   <th>Active</th>
   
 </tr>


   <tr>

     <td><%= @contract.CustomerID %></td>
     <td><%= @contract.customer.CustomerName %></td>
     <td><%= @contract.Discount %></td>
     <td><%= @contract.StartDate.strftime('%Y-%A-%B-%d') %></td>
     <td><%= @contract.EndDate.strftime('%Y-%A-%B-%d') %></td>
     <td><%= @contract.PaymentTerms %></td>
     <td><%= @contract.DeliveryDayOfWeek %></td>
     <td><%= @contract.EmployeeID %></td>
     <td><%= @contract.Note %></td>
     <td><%= @contract.Commission %></td>
     <td><%= @contract.Active %></td>

   </tr>
 
</table> 

<br>

<table>
<tr>
<th>Weekly Deliverables</th>
</tr>
 <tr>
   <th>Product ID</th>
   <th>Category</th>
   <th>Pack Size</th>
   <th>SKU</th>
   <th>Price</th>
   
 </tr>
<% @contract.products.each do |product| %>
   <tr>

     <td><%= product.ProductID %></td>
     <td><%= product.Category %></td>
     <td><%= product.PackSize %></td>
     <td><%= product.SKU %></td>
     <td><%= number_to_currency(product.Price) %></td>
   
   </tr>
 <% end %>
</table> 