<h1>Contracts</h1>

<p><%= link_to 'Back to Main Page', root_path %></p>
<p><%= link_to 'Create New contract', new_contract_path %></p>
<br>

<table>
 <tr>
   <th>Contract ID</th>
   <th>Customer ID</th>
   <th>Customer Name</th>
   <th>Delivery Day Of Week</th>
   <th>Note</th>
   <th>Active</th>
   
 </tr>

 <% @contracts.each do |contract| %>
   <tr>
     <td><%= contract.ContractID %></td>
     <td><%= contract.CustomerID %></td>
     <td><%= contract.customer.CustomerName %></td>
     <td><%= contract.DeliveryDayOfWeek %></td>
     <td><%= contract.Note %></td>
     <td><%= contract.Active %></td>
<td><%= link_to 'Show', contract_path(contract) %></td>

   </tr>
 <% end %>
</table>